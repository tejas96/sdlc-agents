{
    "python.defaultInterpreterPath": "/Users/tejaspatil/miniconda3/envs/sdlc-agents/bin/python",
    "python.condaPath": "/Users/tejaspatil/miniconda3/bin/conda",

    "python.languageServer": "None",

    // Formatting with Black
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
      "--config",
      "${workspaceFolder}/apps/api/pyproject.toml"
    ],
   "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "never",
            "source.fixAll.ruff": "always"
        }
    },

    // Ruff (uses pyproject.toml)
    "ruff.args": [
      "--config=${workspaceFolder}/apps/api/pyproject.toml"
    ],
    "ruff.lint.enable": true,
    "ruff.lint.run": "onSave",

    // Testing with pytest
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.pytestArgs": [
      "${workspaceFolder}/apps/api/tests",
      "-v",
      "--tb=short"
    ],
    "python.testing.cwd": "${workspaceFolder}/apps/api",

    // Editor behavior
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true
  }
